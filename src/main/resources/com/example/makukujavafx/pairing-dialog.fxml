<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>


<AnchorPane fx:id="pairingPane" prefHeight="200.0" prefWidth="300.0" style="-fx-background-color: #363636; -fx-border-color: gray; -fx-border-width: 3;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.makuku.controllers.PairingController">
   <children>
      <Text fill="WHITE" layoutX="50.0" layoutY="95.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Запрос на сопряжение">
         <font>
            <Font name="Calibri" size="20.0" />
         </font>
      </Text>
      <Button fx:id="rejectBtn" cancelButton="true" layoutX="26.0" layoutY="138.0" mnemonicParsing="false" onMouseClicked="#rejectPairing" prefHeight="45.0" prefWidth="120.0" style="-fx-background-radius: 15; -fx-background-color: #4a4a4a;" text="Отклонить" textAlignment="CENTER" textFill="WHITE" textOverrun="CLIP">
         <font>
            <Font name="Calibri Bold" size="14.0" />
         </font>
      </Button>
      <Button fx:id="allowBtn" cancelButton="true" layoutX="156.0" layoutY="138.0" mnemonicParsing="false" onMouseClicked="#allowPairing" prefHeight="45.0" prefWidth="120.0" style="-fx-background-radius: 15; -fx-background-color: #4a4a4a;" text="Разрешить" textFill="WHITE">
         <font>
            <Font name="Calibri Bold" size="14.0" />
         </font>
      </Button>
      <Label fx:id="deviceName" layoutX="110.0" layoutY="14.0" text="DEVICE" textFill="WHITE">
         <font>
            <Font name="Calibri Bold" size="24.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
